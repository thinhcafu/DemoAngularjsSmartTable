@{
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <title>Product All</title>
   
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />

    <link href="~/Scripts/ui-grid.info-gh-pages/release/ui-grid.min.css" rel="stylesheet" />
</head>
<body ng-controller="productCtrl">
    <table st-table="displayedCollection" st-safe-src="rowCollection" class="table table-bordered" style="width:500px;margin:0 auto;">
        <thead>
            <tr>
                <th st-sort="Id">ID</th>
                <th st-sort="Name" colspan="2">Name</th>
                <th>Action</th>
            </tr>
            <tr>
                <th>
                    <input st-search="Id" placeholder="search for firstname" class="input-sm form-control" type="search" />
                </th>
                <th colspan="4">
                    <input st-search="" placeholder="global search" class="input-sm form-control" type="search" />
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="row in displayedCollection">
                <td>{{row.Id | uppercase}}</td>
                <td colspan="2">{{row.Name}}</td>
                <td>
                    <button class="btn" ng-click="getDataToEdit(product)">
                        <span class="glyphicon glyphicon-pencil"></span>  Edit
                    </button>
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-center">
                    <div st-pagination="" st-items-by-page="itemsByPage" st-displayed-pages="2"></div>
                </td>
            </tr>
        </tfoot>
    </table>
        @*<div ui-grid="gridOptions" ui-grid-selection class="grid"></div>*@

        @*<div>
                <a href="javaScript:;" ng-click="prev()">Prev</a>
                <span>{{pageCurrent}}</span>
                <a href="javaScript:;" ng-click="next()">Next</a>
            </div>*@
        <hr>


        <h3>Create New Product:</h3>


        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" ng-model="NameAdd" placeholder="Name">
                </div>
            </div>



        </form>

        <hr>
        <button class="btn btn-success" ng-click="add()">
            <span class="glyphicon glyphicon-save"></span>  Add
        </button>
        <h3>Edit Product:</h3>

        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Id:</label>
                <div class="col-sm-10">
                    <input type="text" ng-model="lastId" disabled placeholder="ID">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" ng-model="Name" placeholder="Name">
                </div>
            </div>

            <button class="btn btn-success" ng-click="edit()" ng-disabled="error || incomplete">
                <span class="glyphicon glyphicon-save"></span>  Save Changes
            </button>
        </form>


    </div>
   

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/ui-grid.js"></script>
    <script src="~/Scripts/Smart-Table-master/dist/smart-table.min.js"></script>
    <script src="~/Scripts/product.js"></script>
    @*<script src="~/Scripts/myScrt.js"></script>*@
</body>
</html>
